<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <h4>本文</h4>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show",book_path(@book)%> |
<a class="Back" href="/books">Back</a>