<%= render '/users/show', user:@user, book:@book %>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |f|%>
            <tr>
              <td><%= link_to attachment_image_tag(f.user, :profile_image, :fill, 50, 50,
              format: 'jpeg', fallback: "no_image.jpg"),user_path(f.user.id) %></td>
              <td><%= link_to f.title, book_path(f.id) %></td>
              <td><%= f.body %></td>
               <td>コメント数:<%= f.book_comments.count %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>