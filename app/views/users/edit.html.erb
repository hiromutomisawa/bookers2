<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName"%><br>
  <label for="inputimage">Image</label><br>
  <%= f.attachment_field :profire_image, autofocus: true, id:"inputimage" %><br>
  <label for="inputintroduction">Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"inpuintroduction" %><br>
  <%= f.submit "Update User" %>
<% end %>