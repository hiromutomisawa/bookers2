<p id="notice"></p>
<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <% @user.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Nme</label><br>
        <%= f.text_field :name, autofocus: true, id:"user_name"%><br>
        <label for="user_image">Image</label><br>
        <%= attachment_image_tag @user, :profile_image, :fill,60,60, fallback:"no_image.jpg"%><br>
        <%= f.attachment_field :profile_image %><br>
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"user_introduction" %><br>
        <%= f.submit "Update User" %>
      </div>
      <% end %>
    </div>
  </div>
</div>