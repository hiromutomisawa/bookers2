<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputimage">Image</label>
  <%= f.attachment_field :profire_image, autofocus: true, id:"inputimage", placeholder:"画像"%>
  <label for="inputintroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inpuintroduction", placeholder:"テキスト"%>
  <%= f.submit "Update User" %>
<% end %>