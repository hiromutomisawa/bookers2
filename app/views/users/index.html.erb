<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img class="attachment user profire_image fallback" src="/assets/no_image.jpg">
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" href= "/users/ :id/edit"></a>
          <%= link_to "edit",  edit_user_path(current_user.id) %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">Title</label><br>
           <%= f.text_field :title %>
         </div>
         <div class="form-group">
           <label for="book_opinion">Opinion</label><br>
           <%= f.text_area :body %><br>
         </div>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" date-disable-with="Create Book">
         </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>