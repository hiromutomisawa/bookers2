<main>
  <div class="left_index">
    <h2>User info</h2>
    <image class="profire_image">
      <attachment_image_tag user, :profire_image, :fill, 100, 100, format:'jpeg', falback:"no_image.jpg" %>
    </image>
    <table class="user_table">
      <tbody>
        <tr>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </tbody>
    </table>
    <div class="edit_box">

    </div>

    <h2>New book</h2>
    <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
    <% end %>


    <h2>Books</h2>

  </div>
</main>