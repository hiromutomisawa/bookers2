<%= render 'users/show', user:@user, book:@book %>


      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |f| %>
            <tr>
             <td><%= attachment_image_tag f, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
             <td><%= f.name %></td>
             <td><%= link_to "Show", user_path(f.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>