<% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
  </div>
<% end %>


<%= render 'users/show', user:@user, book:@book %>


      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |f|%>
          <tbody>
            <tr>
              <td><%= link_to attachment_image_tag(f.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(f.user.id) %></td>
              <td><%=link_to f.title, book_path(f.id) %></td>
              <td><%= link_to f.body %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
