<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
           <%= link_to "edit",edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id" %>
        </div>

        <h2 class="mt-3">New book</h2><br>
        <%= form_with model: @book, local:true do |f| %>
         <div class="form-group">
           <label for="book_title">Title</label><br>
           <%= f.text_field :title %>
         </div>
         <div class="form-group">
           <label for="book_opinion">Opinion</label><br>
           <%= f.text_area :body %><br>
         </div>
         <div class="form-group">
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" date-disable-with="Create Book">
         </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |f|%>
          <tbody>
            <tr>
              <td><%= link_to attachment_image_tag(f.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(f.user.id) %></td>
              <td><%=link_to f.title, book_path(f.id) %></td>
              <td><%= link_to f.body %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>