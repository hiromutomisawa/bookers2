<!DOCTYPE html>
<html>
  <head>
    <title>Booker2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand text-white" href="/">Bookers</a>
          <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user.id), class: 'nav-link text-white fas fa-home' %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", users_path, class: 'nav-link text-white fas fa-users' %>
            </li>
            <li class="nav-item">
              <%= link_to "Books", books_path, class: 'nav-link text-white fas fa-book-open' %>
            </li>
            <li class="nav-item">
              <%= link_to "logout", destroy_user_session_path, class: 'nav-link text-white fas fa-sign-out-alt',method: :delete %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: 'nav-link text-white fas fa-home' %>
            </li>
            <li class="nav-item">
              <%= link_to 'About',home_about_path, class: 'nav-link text-white fas fa-link'%>
            </li>
            <li class="nav-item">
              <%= link_to "sign up", new_user_registration_path, class: 'nav-link text-white fas fa-user-plus' %>
            </li>
            <li class="nav-item">
              <%= link_to "login", new_user_session_path, class: 'nav-link text-white fas fa-sign-in-alt' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <% if notice %>
　  　  <p><%= notice %></p>
      <% end %>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
